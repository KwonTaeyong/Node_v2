{
    "compilerOptions": {
        "target": "ES6",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": ".",       
        "rootDir": "./src",   
        "outDir": "./dist",   
        "typeRoots": ["./node_modules/@types", "./types"]  
    },
    "include": ["src/**/*", "types/**/*", "types"],  
    "exclude": ["node_modules", "dist"]  
}
